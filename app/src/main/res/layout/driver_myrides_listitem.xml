<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtsource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Source"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtdest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Destination"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtride_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Type"
        android:textColor="#000000"
        android:textSize="15dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="date"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="status"
        android:textColor="#000000"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/txtreason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="reason"
        android:textColor="#000000"
        android:textSize="15dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_trip_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txtcenter"
                android:background="#9D9D9D">

                <Button
                    android:id="@+id/btn_trip_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="#9D9D9D"
                    android:padding="5dp"
                    android:text="DETAILS"
                    android:textColor="#000000"
                    android:textSize="18dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtcenter"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:id="@+id/rl_cancel_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtcenter"
                android:background="#0F315E">

                <Button
                    android:id="@+id/btn_cancel_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="#0F315E"
                    android:padding="5dp"
                    android:text="CANCEL TRIP"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl_trip_details"
                android:layout_marginTop="10dp"
                android:background="#0F315E"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>